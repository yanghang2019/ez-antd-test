{
	"compilerOptions": {
		"types": ["node"],
		"moduleResolution": "node",
		"jsx": "react",
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"baseUrl": "./src",
		"outDir": "./lib",
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"typeRoots": [
			// 表示在哪个目录下找声明文件
			"node_modules/@types",
			"./typings/modules"
		],
		"declaration": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": ["./node_modules/", "lib", "dist"]
}
